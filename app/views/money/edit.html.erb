<h1>edit page</h1>

<p>
  <strong>Username:</strong>
  <%= @money.username %>
</p>
 
<p>
  <strong>Category 1:</strong>
  <%= @money.category1 %>
</p>

<p>
  <strong>Total 1:</strong>
  <%= @money.total1 %>
</p>


<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<%= form_with scope: :money, url: money_path, method: "put", local: true do |form| %>
 
  <p>
    <%= form.label :category1 %><br>
    <%= @money.category1 %>
    <%= form.text_field :category1%>
    <%= form.submit 'update' %>
  </p>
  
  <p>
    <%= form.label :total1 %><br>
    <%= @money.total1 %>
    <%= form.text_field :total1%>
    <%= form.submit 'update' %>
  </p>
  
  <p>
    <%= form.label :spent1 %><br>
    <%= @money.spent1 %>
    <%= form.text_field :spent1%>
    <%= form.submit 'update' %>
  </p>
  
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Edit Budget', edit_money_path %>


